---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";

const projects = (await getCollection("projects")).sort(
  (a, b) =>
    new Date(String(b.data.pubDate)).valueOf() -
    new Date(String(a.data.pubDate)).valueOf()
);

// Pisahkan proyek unggulan (pertama) dari daftar lainnya
const featuredProject = projects[0];
const otherProjects = projects.slice(1);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`Proyek Saya - ${SITE_TITLE}`}
      description={SITE_DESCRIPTION}
    />
    <style>
      /* --- VARIABEL LOKAL & STYLING DASAR --- */
      :root {
        --accent: #2337ff;
        --accent-dark: #000d8a;
        --gray: 96, 115, 159;
        --gray-light: 245, 247, 250;
        --black: 15, 18, 25;
        --white: 255, 255, 255;
        --border-radius-md: 12px;
        --transition-duration: 0.3s;
        --box-shadow: 0 4px 12px rgba(var(--gray), 0.1);
      }

      body {
        background-color: rgb(var(--gray-light));
      }

      main {
        width: 100%;
        max-width: 1200px;
        margin: 2rem auto 4rem auto;
        padding: 2rem 1.5rem;
      }

      h1 {
        font-size: clamp(2rem, 5vw, 3.5rem);
        margin-bottom: 2rem;
        text-align: center;
        width: fit-content;
        margin-left: auto;
        margin-right: auto;
      }

      /* --- KONTEN UTAMA --- */
      section {
        display: flex;
        flex-direction: column;
        gap: 2rem;
      }

      .featured-project a {
        display: flex;
        flex-direction: column;
        text-decoration: none;
        color: inherit;
        background-color: rgb(var(--white));
        border-radius: var(--border-radius-md);
        box-shadow: var(--box-shadow);
        padding: 1.5rem;
        height: 100%;
        transition:
          transform var(--transition-duration) ease,
          box-shadow var(--transition-duration) ease;
      }

      .featured-project a:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(var(--accent), 0.15);
      }

      .featured-project img {
        width: 100%;
        height: 350px;
        object-fit: cover;
        border-radius: var(--border-radius-md);
        margin-bottom: 1.5rem;
      }

      /* --- LIST PROYEK LAINNYA (MENGGUNAKAN GRID) --- */
      .project-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
      }

      .project-list li a {
        display: flex;
        flex-direction: column; /* Ubah ke column agar lebih rapi di grid */
        text-decoration: none;
        color: inherit;
        background-color: rgb(var(--white));
        border-radius: var(--border-radius-md);
        box-shadow: var(--box-shadow);
        padding: 1.5rem;
        height: 100%;
        transition:
          transform var(--transition-duration) ease,
          box-shadow var(--transition-duration) ease;
      }

      .project-list li a:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(var(--accent), 0.15);
      }

      .project-list img {
        width: 100%;
        height: 200px; /* Ukuran gambar yang konsisten */
        object-fit: cover;
        border-radius: var(--border-radius-md);
        margin-bottom: 1rem;
      }

      /* --- KONTEN DALAM KARTU --- */
      .project-content {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
      }

      .title {
        color: rgb(var(--black));
        line-height: 1.2;
        margin: 0 0 0.25rem 0;
        font-size: 1.25rem;
        transition: color var(--transition-duration) ease;
      }

      a:hover .title {
        color: rgb(var(--accent));
      }

      .description {
        margin: 0.5rem 0 0;
        color: rgb(var(--gray));
        font-size: 0.95rem;
        line-height: 1.4;
        flex-grow: 1;
      }

      .meta-group {
        margin-top: 0.75rem;
      }

      .meta {
        font-size: 0.85rem;
        color: rgb(var(--gray));
        margin: 0.1rem 0;
      }

      /* --- RESPONSIVE ADJUSTMENTS --- */
      @media (max-width: 900px) {
        .featured-project img {
          height: 300px;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <h1>Proyek Eksplorasi Saya</h1>
      <section>
        {
          featuredProject && (
            <div class="featured-project">
              <a href={`/projects/${featuredProject.slug}/`}>
                {featuredProject.data.heroImage && (
                  <img
                    width={1020}
                    height={510}
                    src={
                      featuredProject.data.heroImage +
                      "?w=1020&h=510&format=webp"
                    }
                    alt={`Gambar proyek: ${featuredProject.data.title}`}
                    loading="lazy"
                  />
                )}
                <div class="project-content">
                  <h4 class="title">{featuredProject.data.title}</h4>
                  <p class="description">{featuredProject.data.description}</p>
                  <div class="meta-group">
                    {featuredProject.data.pubDate && (
                      <p class="meta">
                        Tanggal:{" "}
                        <FormattedDate date={featuredProject.data.pubDate} />
                      </p>
                    )}
                    {featuredProject.data.techStack && (
                      <p class="meta">
                        Tech: {featuredProject.data.techStack.join(", ")}
                      </p>
                    )}
                  </div>
                </div>
              </a>
            </div>
          )
        }

        <ul class="project-list">
          {
            otherProjects.map((project) => (
              <li>
                <a href={`/projects/${project.slug}/`}>
                  {project.data.heroImage && (
                    <img
                      width={400}
                      height={200}
                      src={project.data.heroImage + "?w=400&h=200&format=webp"}
                      alt={`Gambar proyek: ${project.data.title}`}
                      loading="lazy"
                    />
                  )}
                  <div class="project-content">
                    <h4 class="title">{project.data.title}</h4>
                    <p class="description">{project.data.description}</p>
                    <div class="meta-group">
                      {project.data.pubDate && (
                        <p class="meta">
                          Tanggal: <FormattedDate date={project.data.pubDate} />
                        </p>
                      )}
                      {project.data.techStack && (
                        <p class="meta">
                          Tech: {project.data.techStack.join(", ")}
                        </p>
                      )}
                    </div>
                  </div>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
