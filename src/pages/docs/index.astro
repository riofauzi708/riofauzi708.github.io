---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";

// Ambil semua docs, abaikan yang draft
const docs = (await getCollection("docs"))
  .filter((doc) => !doc.data.draft)
  .sort(
    (a, b) =>
      new Date(String(b.data.pubDate)).valueOf() -
      new Date(String(a.data.pubDate)).valueOf()
  );
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`Arsip Dokumentasi - ${SITE_TITLE}`}
      description={SITE_DESCRIPTION}
    />
    <style>
      /* --- GLOBAL STYLING --- */
      :root {
        --accent: #2337ff;
        --accent-dark: #000d8a;
        --gray: 96, 115, 159;
        --gray-light: 245, 247, 250;
        --black: 15, 18, 25;
        --white: 255, 255, 255;
        --border-radius-md: 12px;
        --transition-duration: 0.3s;
        --box-shadow: 0 4px 12px rgba(var(--gray), 0.1);
        --doc-img-size: 80px;
      }

      body {
        background-color: rgb(var(--gray-light));
      }

      main {
        width: 100%;
        max-width: 1000px;
        margin: 2rem auto 4rem auto;
        padding: 2rem 1.5rem;
      }

      h1 {
        font-size: clamp(2rem, 5vw, 3.5rem);
        margin-bottom: 2rem;
        text-align: center;
      }

      /* --- CARD LIST --- */
      ul {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 1.5rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
      }

      /* --- CARD STYLE --- */
      ul li a {
        display: flex;
        flex-direction: row;
        align-items: flex-start;
        text-decoration: none;
        color: inherit;
        background-color: rgb(var(--white));
        border-radius: var(--border-radius-md);
        box-shadow: var(--box-shadow);
        padding: 1.5rem;
        height: 100%;
        transition:
          transform var(--transition-duration) ease,
          box-shadow var(--transition-duration) ease;
      }

      ul li a:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(var(--accent), 0.1);
      }

      .doc-thumbnail {
        width: var(--doc-img-size);
        height: var(--doc-img-size);
        object-fit: cover;
        border-radius: 8px;
        margin-right: 1.25rem;
        flex-shrink: 0;
      }

      .meta-group {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
      }

      .title {
        color: rgb(var(--black));
        font-size: 1.25rem;
        margin: 0 0 0.25rem 0;
        line-height: 1.3;
        font-weight: 700;
        transition: color var(--transition-duration) ease;
      }

      ul li a:hover .title {
        color: rgb(var(--accent));
      }

      .date-meta {
        font-size: 0.85rem;
        color: var(--accent-dark);
        font-weight: 600;
        margin-bottom: 0.5rem;
      }

      .description {
        margin: 0.5rem 0 0;
        color: rgb(var(--gray));
        font-size: 0.95rem;
        line-height: 1.5;
        flex-grow: 1;
      }

      /* --- RESPONSIVE ADJUSTMENTS --- */
      @media (max-width: 450px) {
        ul li a {
          flex-direction: column;
          align-items: center;
          text-align: center;
        }
        .doc-thumbnail {
          margin-right: 0;
          margin-bottom: 1rem;
        }
        .meta-group {
          align-items: center;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <h1>Arsip Dokumentasi & Studi Kasus</h1>
      <section>
        <ul>
          {
            docs.map((post) => (
              <li>
                <a href={`/docs/${post.slug}/`}>
                  {post.data.heroImage ? (
                    <img
                      class="doc-thumbnail"
                      width={80}
                      height={80}
                      src={post.data.heroImage + "?w=100&h=100&format=webp"}
                      alt={`Thumbnail dokumen: ${post.data.title}`}
                      loading="lazy"
                    />
                  ) : (
                    <svg
                      class="doc-thumbnail"
                      viewBox="0 0 24 24"
                      fill="none"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path
                        d="M14 2H6C5.46957 2 4.96086 2.21071 4.58579 2.58579C4.21071 2.96086 4 3.46957 4 4V20C4 20.5304 4.21071 21.0391 4.58579 21.4142C4.96086 21.7893 5.46957 22 6 22H18C18.5304 22 19.0391 21.7893 19.4142 21.4142C19.7893 21.0391 20 20.5304 20 20V8L14 2Z"
                        stroke="rgb(var(--gray))"
                        stroke-width="1.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <path
                        d="M14 2V8H20"
                        stroke="rgb(var(--gray))"
                        stroke-width="1.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <path
                        d="M16 13H8"
                        stroke="rgb(var(--gray))"
                        stroke-width="1.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <path
                        d="M16 17H8"
                        stroke="rgb(var(--gray))"
                        stroke-width="1.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <path
                        d="M10 9H8"
                        stroke="rgb(var(--gray))"
                        stroke-width="1.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                    </svg>
                  )}

                  <div class="meta-group">
                    <h4 class="title">{post.data.title}</h4>

                    {post.data.pubDate && (
                      <span class="date-meta">
                        Dipublikasikan:{" "}
                        <FormattedDate date={post.data.pubDate} />
                      </span>
                    )}

                    {post.data.updatedDate && (
                      <span
                        class="date-meta"
                        style="color: rgb(var(--gray)); font-weight: 400;"
                      >
                        Diperbarui:{" "}
                        <FormattedDate date={post.data.updatedDate} />
                      </span>
                    )}

                    <p class="description">{post.data.description}</p>
                  </div>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
