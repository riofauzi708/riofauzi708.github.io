      font-size: clamp(1rem, 2.5vw, 1.25rem);
      margin: 0.25rem 0 0;
    }

    .cta-buttons {
      display: flex;
      gap: 1rem;
      margin-top: 1rem;
      flex-wrap: wrap;
    }

    .btn {
      background-color: #3498db;
      color: white;
      padding: 0.6rem 1.2rem;
      border-radius: 6px;
      text-decoration: none;
      transition: background-color 0.3s ease;

      /* MODIFIED: Responsive font size for buttons */
      font-size: clamp(0.95rem, 2.5vw, 1rem);
    }

    .btn:hover {
      background-color: #2980b9;
    }

    .btn-secondary {
      background-color: #2ecc71;
    }

    .btn-hire {
      background-color: #e74c3c;
    }

    h2 {
      /* MODIFIED: Responsive font size for section headings */
      font-size: clamp(1.25rem, 3vw, 1.75rem);
      margin-bottom: 0.5rem;
    }

    section {
      margin-bottom: 2rem;
    }

    .skills-list,
    .project-list,
    .contact-list {
      list-style: none;
      padding-left: 0;
    }

    .skills-list li,
    .project-list li,
    .contact-list li {
      margin-bottom: 0.5rem;
    }

    @media (max-width: 640px) {
      .about-header {
        flex-direction: column;
        text-align: center;
      }

      .cta-buttons {
        flex-direction: column;
        align-items: center;
      }

      .btn {
        width: 100%;
        text-align: center;
      }
    }
  </style>
