  <style>
    /* --- VARIABEL LOKAL (Pastikan Konsisten) --- */
    :root {
      --accent: #2337ff;
      --accent-dark: #000d8a;
      --gray: 96, 115, 159;
      --gray-light: 245, 247, 250;
      --black: 15, 18, 25;
      --border-radius-md: 12px;
      --transition-duration: 0.3s;
      --box-shadow: 0 4px 12px rgba(var(--gray), 0.1);
    }

    .about-page {
      max-width: 900px;
      margin: 0 auto;
      padding: 2rem 1.5rem; /* Padding konsisten */
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
        Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji",
        "Segoe UI Symbol";
      color: rgb(var(--black));

      /* MODIFIED: Responsive font size */
      font-size: clamp(1rem, 2vw, 1.1rem);
      line-height: 1.7;
    }

    /* --- HEADER & PROFIL --- */
    .about-header {
      display: flex;
      gap: 2rem;
      align-items: center;
      flex-wrap: wrap;
      margin-bottom: 3rem; /* Jarak lebih luas */
      padding: 1.5rem;
      border-radius: var(--border-radius-md);
      background-color: rgb(
        var(--gray-light)
      ); /* Latar belakang untuk header */
    }

    .profile-img {
      width: 130px; /* Ukuran sedikit lebih besar */
      height: 130px;
      border-radius: 50%;
      object-fit: cover;
      box-shadow: 0 4px 16px rgba(var(--black), 0.1);
    }

    .about-header h1 {
      color: rgb(var(--black));
      font-size: clamp(2rem, 5vw, 3rem);
      margin: 0;
    }

    .about-header p {
      color: rgb(var(--gray));
      font-size: clamp(1.05rem, 2.5vw, 1.3rem);
      margin: 0.25rem 0 0;
      font-weight: 500;
    }

    /* --- TOMBOL CTA --- */
    .cta-buttons {
      display: flex;
      gap: 0.75rem;
      margin-top: 1.25rem;
      flex-wrap: wrap;
    }

    .btn {
      padding: 0.75rem 1.25rem;
      border-radius: 8px;
      text-decoration: none;
      font-weight: 600;
      transition: all 0.3s ease;
      font-size: clamp(0.9rem, 2vw, 1rem);
      box-shadow: 0 2px 5px rgba(var(--black), 0.1);
    }

    .btn-primary {
      background-color: var(--accent);
      color: white;
    }

    .btn-primary:hover {
      background-color: var(--accent-dark);
    }

    .btn-secondary {
      background-color: #e74c3c; /* Warna Hire Me (Merah) */
      color: white;
    }

    .btn-secondary:hover {
      background-color: #c0392b;
    }

    .btn-tertiary {
      background-color: #2ecc71; /* Warna WhatsApp (Hijau) */
      color: white;
    }

    .btn-tertiary:hover {
      background-color: #27ae60;
    }

    /* --- SECTION HEADINGS --- */
    h2 {
      color: var(--accent);
      font-size: clamp(1.5rem, 3vw, 2rem);
      margin-top: 2rem;
      margin-bottom: 0.75rem;
      border-bottom: 2px solid rgba(var(--gray), 0.1);
      padding-bottom: 0.5rem;
    }

    section {
      margin-bottom: 3rem;
    }

    /* --- SKILLS GRID (Dua Kolom) --- */
    .skills-grid {
      list-style: none;
      padding-left: 0;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 0.75rem 1.5rem;
    }

    .skills-grid li {
      font-weight: 500;
      color: rgb(var(--black));
      /* Margin dihapus karena sudah ada gap di grid */
      margin-bottom: 0;
    }

    /* --- PROJECT LIST (Bullet Point) --- */
    .project-list {
      list-style-type: "üëâ"; /* Bullet kustom */
      padding-left: 1.5rem;
    }

    .project-list li {
      margin-bottom: 0.5rem;
    }

    /* --- EDUCATION CARD --- */
    .education-card {
      padding: 1rem;
      border-left: 4px solid var(--accent);
      background-color: rgb(var(--gray-light), 0.5);
      border-radius: 4px;
    }

    .education-card p {
      margin: 0.5rem 0;
    }

    /* --- CONTACT GRID (Labeling Rapi) --- */
    .contact-grid {
      list-style: none;
      padding-left: 0;
    }

    .contact-grid li {
      display: flex; /* Memastikan label dan link sejajar */
      gap: 0.75rem;
      margin-bottom: 0.5rem;
      font-weight: 500;
    }

    .contact-grid li span {
      width: 100px; /* Lebar label yang tetap agar rapi */
      color: rgb(var(--gray));
      flex-shrink: 0;
    }

    .contact-grid li a {
      color: var(--accent);
      text-decoration: none;
      transition: color 0.3s ease;
    }

    .contact-grid li a:hover {
      text-decoration: underline;
    }

    /* --- RESPONSIVE ADJUSTMENTS --- */
    @media (max-width: 640px) {
      .about-header {
        flex-direction: column;
        text-align: center;
        padding: 1rem;
      }

      .profile-img {
        width: 100px;
        height: 100px;
      }

      .cta-buttons {
        flex-direction: row; /* Biarkan tombol sejajar jika memungkinkan */
        justify-content: center;
      }

      .skills-grid {
        grid-template-columns: 1fr; /* Satu kolom di mobile */
      }

      .contact-grid li {
        flex-direction: column;
        gap: 0.2rem;
      }
      .contact-grid li span {
        width: auto;
        font-weight: 700;
      }
    }
  </style>
</Layout>
